    Melee:
      PLAY F 0 A_JumpIfInventory("UsingFist",1,"MeleeFist");
      PLAY F 0 A_JumpIfInventory("UsingChainsaw",1,"MeleeChainsaw");
      PLAY F 0 A_JumpIfInventory("UsingPistol",1,"MeleePistol");
      PLAY F 0 A_JumpIfInventory("UsingShotgun",1,"MeleeShotgun");
      PLAY F 0 A_JumpIfInventory("UsingSSG",1,"MeleeSSG");
      PLAY F 0 A_JumpIfInventory("UsingChaingun",1,"MeleeChaingun");
      PLAY F 0 A_JumpIfInventory("UsingRocketlauncher",1,"MeleeRocketLauncher");
      PLAY F 0 A_JumpIfInventory("UsingPlasmagun",1,"MeleePlasmagun");
      PLAY F 0 A_JumpIfInventory("UsingBFG",1,"MeleeBFG");
      PLAY F 6 BRIGHT;
      Goto Missile;
    MeleeFist:
      PLA1 F 6 BRIGHT;
      Goto Missile;
    MeleeChainsaw:
      PLA0 F 6 BRIGHT;
      Goto Missile;
    MeleePistol:
      PLA2 F 6 BRIGHT;
      Goto Missile;
    MeleeShotgun:
      PLA3 F 6 BRIGHT;
