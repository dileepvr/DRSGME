    SpawnPlasmagun:
      PLA6 A 0 A_JumpIf(Vel.X!=0,"SeePlasmagun");
      PLA6 A 0 A_JumpIf(Vel.Y!=0,"SeePlasmagun");
      PLA6 A 1;
      Goto Spawn;
    SpawnBFG:
      PLA7 A 0 A_JumpIf(Vel.X!=0,"SeeBFG");
      PLA7 A 0 A_JumpIf(Vel.Y!=0,"SeeBFG");
      PLA7 A 1;
      Goto Spawn;
    See:
      PLAY A 0 A_JumpIfInventory("UsingFist",1,"SeeFist");
      PLAY A 0 A_JumpIfInventory("UsingChainsaw",1,"SeeChainsaw");
      PLAY A 0 A_JumpIfInventory("UsingPistol",1,"SeePistol");
      PLAY A 0 A_JumpIfInventory("UsingShotgun",1,"SeeShotgun");
      PLAY A 0 A_JumpIfInventory("UsingSSG",1,"SeeSSG");
      PLAY A 0 A_JumpIfInventory("UsingChaingun",1,"SeeChaingun");
      PLAY A 0 A_JumpIfInventory("UsingRocketlauncher",1,"SeeRocketLauncher");
      PLAY A 0 A_JumpIfInventory("UsingPlasmagun",1,"SeePlasmagun");
      PLAY A 0 A_JumpIfInventory("UsingBFG",1,"SeeBFG");
      PLAY ABCD 4;
      Loop;
    SeeFist:
      PLA1 ABCD 4;
      Goto Spawn;
    SeeChainsaw:
      PLA0 ABCD 4;
      Goto Spawn;
    SeePistol:
      PLA2 ABCD 4;
      Goto Spawn;
    SeeShotgun:
      PLA3 ABCD 4;
      Goto Spawn;
    SeeSSG:
      PLA9 ABCD 4;
      Goto Spawn;
    SeeChaingun:
      PLA4 ABCD 4;
      Goto Spawn;
    SeeRocketLauncher:
      PLA5 ABCD 4;
      Goto Spawn;
    SeePlasmagun:
      PLA6 ABCD 4;
      Goto Spawn;
    SeeBFG:
      PLA7 ABCD 4;
      Goto SpawnBFG;
    Missile:
      PLAY E 0 A_JumpIfInventory("UsingFist",1,"MissileFist");
      PLAY E 0 A_JumpIfInventory("UsingChainsaw",1,"MissileChainsaw");
      PLAY E 0 A_JumpIfInventory("UsingPistol",1,"MissilePistol");
      PLAY E 0 A_JumpIfInventory("UsingShotgun",1,"MissileShotgun");
      PLAY E 0 A_JumpIfInventory("UsingChaingun",1,"MissileChaingun");
      PLAY E 0 A_JumpIfInventory("UsingSSG",1,"MissileSSG");
      PLAY E 0 A_JumpIfInventory("UsingRocketlauncher",1,"MissileRocketLauncher");
      PLAY E 0 A_JumpIfInventory("UsingPlasmagun",1,"MissilePlasmagun");
      PLAY E 0 A_JumpIfInventory("UsingBFG",1,"MissileBFG");
      PLAY E 12;
      Goto Spawn;
    MissileFist:
      PLA1 E 12;
      Goto Spawn;
    MissileChainsaw:
      PLA0 E 12;
      Goto Spawn;
    MissilePistol:
      PLA2 E 12;
      Goto Spawn;
    MissileShotgun:
      PLA3 E 12;
      Goto Spawn;
    MissileSSG:
      PLA9 E 12;
