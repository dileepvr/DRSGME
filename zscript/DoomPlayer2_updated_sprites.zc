      PLA4 A 0 A_JumpIf(Vel.Y!=0,"SeeChaingun");
      PLA4 A 1;
      Goto Spawn;
    SpawnRocketLauncher:
      PLA5 A 0 A_JumpIf(Vel.X!=0,"SeeRocketLauncher");
      PLA5 A 0 A_JumpIf(Vel.Y!=0,"SeeRocketLauncher");
