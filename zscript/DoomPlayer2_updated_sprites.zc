class FistNew : Fist replaces Fist
{
  States
    {
    Select:
      PUNG A 0 A_GiveInventory("UsingFist",1);
      PUNG A 1 A_Raise;
      Wait;
    Deselect:
      PUNG A 1 A_Lower;
      PUNG A 0 A_TakeInventory("UsingFist",1);
      PUNG A 1 A_Lower;
      Wait;
    }
}

