    XDeath:
      PLAY O 0 A_JumpIfInventory("UsingFist",1,"XDeathFist");
      PLAY O 0 A_JumpIfInventory("UsingChainsaw",1,"XDeathChainsaw");
      PLAY O 0 A_JumpIfInventory("UsingPistol",1,"XDeathPistol");
      PLAY O 0 A_JumpIfInventory("UsingShotgun",1,"XDeathShotgun");
      PLAY O 0 A_JumpIfInventory("UsingSSG",1,"XDeathSSG");
      PLAY O 0 A_JumpIfInventory("UsingChaingun",1,"XDeathChaingun");
      PLAY O 0 A_JumpIfInventory("UsingRocketlauncher",1,"XDeathRocketLauncher");
      PLAY O 0 A_JumpIfInventory("UsingPlasmagun",1,"XDeathPlasmagun");
      PLAY O 0 A_JumpIfInventory("UsingBFG",1,"XDeathBFG");
      PLAY O 5;
      PLAY P 5 A_XScream;
      PLAY Q 5 A_NoBlocking;
      PLAY RSTUV 5;
      PLAY W -1;
      Stop;
    XDeathFist:
      PLA1 O 5;
      PLA1 P 5 A_XScream;
      PLA1 Q 5 A_NoBlocking;
      PLA1 RSTUV 5;
      PLA1 W -1;
      Stop;
    XDeathChainsaw:
